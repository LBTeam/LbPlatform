<Window x:Class="HttpUploadTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HttpUploadTest"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight">
    <Grid Margin="10">
        <StackPanel Orientation="Horizontal">
            <Label Content="上传文件" Margin="0,0,5,0"/>
            <TextBox Name="uploadFileTextBox" Width="300" Margin="0,0,10,0"/>
            <Button Width="70" Margin="0,0,5,0" Content="选取文件..." Click="OpenFileButton_Click" />
            <Button Width="70" Content="上传" Click="UploadButton_Click" />
        </StackPanel>
    </Grid>
</Window>
